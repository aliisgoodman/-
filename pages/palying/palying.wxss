/* pages/palying/palying.wxss */
#myVideo {
  width: 100%;
}

.title {
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  margin: 20px 0 15px 0;
}

.cate {
  text-align: center;
  font-size: 14px;
}

.intro {
  padding: 20px 10px;
  font-size: 14px;
  line-height: 2em;
}

.line {
  width: 100%;
  height: 2px;
  background-color: #ccc;
}

.scroll-view {
  padding: 20px 0 0 15px;
}

.scroll-view_H {
  white-space: nowrap;

}

.imagewrap {
  display: inline-block;
  width: 40%;
  margin-right: 15px;
  position: relative;
}

.textwrap {
  position: absolute;
  bottom: 0;
  left: 0;
  color: aliceblue;
  font-size: 10px;
  padding: 8px;
}

.text {
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10px;
}

image {
  width: 100%;
  filter: brightness(.7);
}

.name {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  padding: 15px 8px 15px 0;

}

.namemore {
  font-weight: 600;
}

.comment {
  padding: 15px 5px;
}

.top {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  align-items: center;
  margin-bottom: 10px;
}

.top image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.username {
  margin: 0 10px;
}

.top1 {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.top2 {
  padding: 0 10px;

}

.content {
  font-size: 14px;
  padding-left: 45px;
}

.linedown {
  padding: 15px 0 15px 5px;

  font-weight: 600;
}

.line1{
  margin-top: 20px;
}