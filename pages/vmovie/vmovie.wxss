/* pages/vmovie/vmovie.wxss */
.van-nav-bar{
padding-top: 0 !important;
}
.van-nav-bar__left,.van-nav-bar__right{
  font-size: 10px !important;
  color: white !important;
}
.van-tabs__wrap {
  max-width: 60%;
  margin: 0 auto;
}
.van-nav-bar__title.van-ellipsis{
  max-width: 100%;
}
.wrap{
  display: flex;
  flex-wrap: wrap;
 
}

.view{
  position: relative;
  width: 50%;
}
.image{
  width: 100%;
  filter: brightness(.7);
  display: block;
}
.text{
  position: absolute;
  top: 0;
  left: 0;
width: 100%;
height: 100%;
font-size: 20px;
font-weight: 700;
color: azure;
display: flex;
justify-content: center;
align-items: center;
}

